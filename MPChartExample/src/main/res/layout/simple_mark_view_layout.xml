<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pop_marker_bg"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:layout_height="50dp">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/date"
        android:gravity="center"
        android:text="11月8日\n2018年"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/line"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="1dp"
        android:background="@android:color/white"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/dianliang"
        android:layout_marginStart="10dp"
        android:text="13"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dianlinag_uint"
        app:layout_constraintStart_toStartOf="@+id/dianliang"
        app:layout_constraintTop_toBottomOf="@id/dianliang"
        android:text="用电量(kWh)"
        android:textColor="#ffffffff"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dianfei"
        android:layout_marginStart="10dp"
        android:text="28"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/dianlinag_uint"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/dianfei"
        app:layout_constraintTop_toBottomOf="@id/dianfei"
        android:text="用电量(kWh)"
        android:textColor="#ffffffff"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>